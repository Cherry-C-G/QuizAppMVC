@model IEnumerable<QuizApp.Models.Question>

<h2>Mark Question</h2>
<form asp-action="Mark">
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Question ID</th>
                <th>Question Text</th>
                <th>Question Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="radio" name="questionId" value="@item.QuestionID" /></td>
                    <td>@item.QuestionID</td>
                    <td>@item.QuestionText</td>
                    <td>@item.QuestionType</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <label for="isCorrect">Mark as Correct</label>
        <input type="checkbox" id="isCorrect" name="isCorrect" value="true" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>



