@model Question

<form asp-controller="Question" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="QuestionText"></label>
        <input asp-for="QuestionText" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="QuestionType"></label>
        <input asp-for="QuestionType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Answer1"></label>
        <input asp-for="Answer1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Answer2"></label>
        <input asp-for="Answer2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Answer3"></label>
        <input asp-for="Answer3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Answer4"></label>
        <input asp-for="Answer4" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CorrectAnswer"></label>
        <input asp-for="CorrectAnswer" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>