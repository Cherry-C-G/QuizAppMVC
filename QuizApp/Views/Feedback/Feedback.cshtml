@model QuizApp.Models.Feedback

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Feedback</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="@Url.Action("SubmitFeedback", "Feedback")">
                <div class="form-group">
                    <label for="rating">Rating:</label>
                    <select class="form-control" id="rating" name="rating">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="feedbackText">Feedback Text:</label>
                    <textarea class="form-control" rows="5" id="feedbackText" name="feedbackText"></textarea>
                </div>
                <input type="hidden" name="userID" value="@Model.UserID" />
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>



