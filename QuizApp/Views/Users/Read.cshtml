@model Users

<h2>View User</h2>

<div class="form-group">
    <label>Email:</label>
    <p>@Model.Email</p>
</div>
<div class="form-group">
    <label>First Name:</label>
    <p>@Model.FirstName</p>
</div>
<div class="form-group">
    <label>Last Name:</label>
        <p>@Model.LastName</p>
</div>
<div class="form-group">
    <label>Date of Birth:</label>
    <p>@Model.DateOfBirth.ToShortDateString()</p>
</div>
<div class="form-group">
    <label>Role:</label>
    <p>@Model.Role</p>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-primary">Edit</a>
</div>
